<!-- Na descricao abaixo, os simbolos utilizados tem o seguinte significado: -->
<!-- ii: integer value -->
<!-- ff: float value -->
<!-- ss: string value -->
<!-- cc: character "x" or "y" or "z" -->
<!-- tt: "0" or "1" with Boolean significance -->

<yas>
  <!--scene-0-->
  <scene root="ss" axis_length="ff" />

  <!--views-1-->
  <views default="ss">
    <perspective>
    </perspective>
    <ortho>
    </ortho>
  </views>

  <!--ambient-2-->
  <ambient>
    <ambient r="ff" g="ff" b="ff" a="ff" />
    <background r="ff" g="ff" b="ff" a="ff" />
  </ambient>


  <!--  ##################################    lights-3 ############################### -->
  <lights>
    <omni>
      <ambient r="0.2" g="0.2" b="0.2" a="1"/>
      <background r="0" g="0" b="0" a="1"/>
    </omni>

    <spot>
      <light id="light0">
        <enable value="1"/>
        <position x="0" y="50" z="10" w="1"/>
        <ambient r="0.2" g="0.2" b="0.2" a="1.0"/>
        <diffuse r="1.0" g="1.0" b="1.0" a="1.0"/>
        <specular r="1.0" g="1.0" b="1.0" a="1.0"/>
      </light>

      <light id="light1">
        <enable value="1"/>
        <position x="150" y="50" z="10" w="1"/>
        <ambient r="0.2" g="0.2" b="0.2" a="1.0"/>
        <diffuse r="1.0" g="1.0" b="1.0" a="1.0"/>
        <specular r="1.0" g="1.0" b="1.0" a="1.0"/>
      </light>

      <light id="light2">
        <enable value="1"/>
        <position x="0" y="50" z="30" w="1"/>
        <ambient r="0.2" g="0.2" b="0.2" a="1.0"/>
        <diffuse r="1.0" g="1.0" b="1.0" a="1.0"/>
        <specular r="1.0" g="1.0" b="1.0" a="1.0"/>
      </light>

      <light id="light3">
        <enable value="1"/>
        <position x="150" y="50" z="30" w="1"/>
        <ambient r="0.2" g="0.2" b="0.2" a="1.0"/>
        <diffuse r="0.6" g="0.6" b="0.6" a="1.0"/>
        <specular r="0.6" g="0.6" b="0.6" a="1.0"/>
      </light>

    </spot>
  </lights>


  <!-- ##################################### textures-4 #######################     -->
  <!-- CHANGE Textures -->
  <textures>
    <texture id="texttabletop">
      <file path="images/table.png" />
      <amplif_factor s="2" t="2" />
    </texture>
  </textures>

  <!--CHANGE materials-5-->
  <materials>

    <!-- Green Material -->
    <material id="greenMaterial">
      <shininess value="1"/>
      <specular r="0.0" g="0.0" b="0.0" a="1"/>
      <diffuse r="0.33" g="0.42" b="0.18" a="1"/>
      <ambient r="0.0" g="0.0" b="0.0" a="1"/>
      <emission r="0.0" g="0.0" b="0.0" a="1"/>
    </material>

    <!-- Brown Material -->
    <material id="brownMaterial">
      <shininess value="1"/>
      <specular r="0.0" g="0.0" b="0.0" a="1"/>
      <diffuse r="0.4" g="0.19" b="0.03" a="1"/>
      <ambient r="0.0" g="0.0" b="0.0" a="1"/>
      <emission r="0.0" g="0.0" b="0.0" a="1"/>
    </material>

    <!-- Dark Brown Material -->
    <material id="darkBrownMaterial">
      <shininess value="1"/>
      <specular r="0.0" g="0.0" b="0.0" a="1"/>
      <diffuse r="0.3" g="0.09" b="0.00" a="1"/>
      <ambient r="0.0" g="0.0" b="0.0" a="1"/>
      <emission r="0.0" g="0.0" b="0.0" a="1"/>
    </material>

    <!-- A default material -->
    <material id="defaultMaterial">
      <shininess value="1"/>
      <specular r="0.0" g="0.0" b="0.0" a="1"/>
      <diffuse r="0.4" g="0.4" b="0.4" a="1"/>
      <ambient r="0.4" g="0.4" b="0.4" a="1"/>
      <emission r="0.0" g="0.0" b="0.0" a="1"/>
    </material>

  </materials>

  <!-- #################################    transformations-5 ###########################-->
  <transformations>
    <transformation id="ss">
      <translate x="ff" y="ff" z="ff" />
      <rotate axis="cc" angle="ff" />
      <scale x="ff" y="ff" z="ff" />
    </transformation>
  </transformations>

  <!--    ########################        primitives-6     ###################            -->
  <primitives>
    <primitive id="rectangulo">
      <rectangle x1="0" y1="1" x2="1" y2="0" />
    </primitive >
  </primitives >

  <!-- #######################          componentes-7       #####################   -->
  <components>
    <component id="mesa">
      <transformation>
        <rotate axis="cc" angle="ff" />
        <scale x="ff" y="ff" z="ff" />
      </transformation>
      <materials>
      </materials>
      <texture />
      <children>
        <componentref id="tampo" />
        <componentref id="pernas" />
      </children>
    </component>

    <component id="tampo">
      <transformation>
        <transformationref id="tabletoptransf" />
        <translate x="ff" y="ff" z="ff" />
        <rotate axis="cc" angle="ff" />
        <scale x="ff" y="ff" z="ff" />
      </transformation>
      <materials>
        <material id="tabletoptext" />
      </materials>
      <texture id="ss" length_s="ff" length_t="ff" />
      <children>
        <componentref id="cubo" />
      </children>
    </component>

    <component id="pernas">
      <transformation>
        <transformationref id="tabletoptransf" />
        <translate x="ff" y="ff" z="ff" />
        <rotate axis="cc" angle="ff" />
        <scale x="ff" y="ff" z="ff" />
      </transformation>
      <materials>
        <material id="tabletoptext" />
      </materials>
      <texture id="ss" length_s="ff" length_t="ff" />

      <children>
        <componentref id="perna1" />
        <componentref id="perna2" />
        <componentref id="perna3" />
        <componentref id="perna4" />
      </children>
    </component>
<!-- ############################################## PERNAS ##############################-->
    <component id="perna1">
      <transformation>
        <transformationref id="tabletoptransf" />
        <translate x="ff" y="ff" z="ff" />
        <rotate axis="cc" angle="ff" />
        <scale x="ff" y="ff" z="ff" />
      </transformation>
      <materials>
        <material id="tabletoptext" />
      </materials>
      <texture id="ss" length_s="ff" length_t="ff" />
      <children>
        <componentref id="perna" />
      </children>
    </component>

    <component id="perna2">
      <children>
        <componentref id="perna" />
      </children>
    </component>

    <component id="perna3">
      <children>
        <componentref id="perna" />
      </children>
    </component>

    <component id="perna4">
      <children>
        <componentref id="perna" />
      </children>
    </component>

    <component id="perna">
      <transformation>
        <transformationref id="tabletoptransf" />
        <translate x="ff" y="ff" z="ff" />
        <rotate axis="cc" angle="ff" />
        <scale x="ff" y="ff" z="ff" />
      </transformation>
      <children>
        <componentref id="cubo" />
      </children>
    </component>

    <component id="cubo">
      <transformation>
      </transformation>
      <children>
        <componentref id="face1"/>
        <componentref id="face2"/>
        <componentref id="face3"/>
        <componentref id="face4"/>
        <componentref id="face5"/>
        <componentref id="face6"/>
      </children>
    </component>
    <!-- #############################   Faces   ##################################### -->
    <component id="face1">
      <transformation>
      <!-- Adicionar a trnasf?  -->
      </transformation>
      <children>
        <primitiveref id="rectangulo"/>
      </children>
    </component>

    <component id="face2">
      <transformation>
      <!-- Adicionar a trnasf?  -->
      </transformation>
      <children>
        <primitiveref id="rectangulo"/>
      </children>
    </component>

    <component id="face3">
      <transformation>
      <!-- Adicionar a trnasf?  -->
      </transformation>
      <children>
        <primitiveref id="rectangulo"/>
      </children>
    </component>
    
    <component id="face4">
      <transformation>
      <!-- Adicionar a trnasf?  -->
      </transformation>
      <children>
        <primitiveref id="rectangulo"/>
      </children>
    </component>

    <component id="face5">
      <transformation>
      <!-- Adicionar a trnasf?  -->
      </transformation>
      <children>
        <primitiveref id="rectangulo"/>
      </children>
    </component>

    <component id="face6">
      <transformation>
      <!-- Adicionar a trnasf?  -->
      </transformation>
      <children>
        <primitiveref id="rectangulo"/>
      </children>
    </component>

  </components>
</yas>